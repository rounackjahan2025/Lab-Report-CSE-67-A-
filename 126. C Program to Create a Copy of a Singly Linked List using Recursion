#include <stdio.h>
#include <stdlib.h>

struct Node {
    int data;
    struct Node *next;
};

struct Node* newNode(int data) {
    struct Node* node = malloc(sizeof(struct Node));
    node->data = data;
    node->next = NULL;
    return node;
}

struct Node* copyList(struct Node* head) {
    if (head == NULL) return NULL;
    struct Node* new_head = newNode(head->data);
    new_head->next = copyList(head->next);
    return new_head;
}

void printList(struct Node* head) {
    while(head) {
        printf("%d -> ", head->data);
        head = head->next;
    }
    printf("NULL\n");
}

int main() {
    struct Node* head = newNode(1);
    head->next = newNode(2);
    head->next->next = newNode(3);

    struct Node* copy = copyList(head);
    printf("Original: "); printList(head);
    printf("Copy: "); printList(copy);

    return 0;
}
