#include <stdio.h>

int main() {
    char src[50], dest[50], ch;
    printf("Enter source file: ");
    scanf("%s", src);
    printf("Enter destination file: ");
    scanf("%s", dest);

    FILE *f1 = fopen(src, "r");
    FILE *f2 = fopen(dest, "w");
    if(!f1 || !f2) {
        printf("Error opening files.\n");
        return 1;
    }

    while((ch = fgetc(f1)) != EOF)
        fputc(ch, f2);

    printf("Content copied successfully.\n");
    fclose(f1);
    fclose(f2);
    return 0;
}
