#include <stdio.h>

int main() {
    FILE *f1, *f2;
    char file1[50], file2[50];
    printf("Enter file1: ");
    scanf("%s", file1);
    printf("Enter file2: ");
    scanf("%s", file2);

    f1 = fopen(file1, "r");
    f2 = fopen(file2, "r");

    if(!f1 || !f2){ printf("Error opening file\n"); return 1; }

    char ch1, ch2;
    int pos=0, flag=0;
    while((ch1=fgetc(f1))!=EOF && (ch2=fgetc(f2))!=EOF){
        pos++;
        if(ch1!=ch2){
            printf("Mismatch at position %d\n", pos);
            flag=1; break;
        }
    }

    if(!flag) printf("Files are identical.\n");

    fclose(f1); fclose(f2);
    return 0;
}
