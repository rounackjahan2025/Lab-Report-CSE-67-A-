#include <stdio.h>
#include <time.h>
#include <unistd.h>

int main() {
    while(1) {
        time_t t;
        struct tm *tm_info;
        char buffer[20];

        time(&t);
        tm_info = localtime(&t);
        strftime(buffer, sizeof(buffer), "%I:%M:%S %p", tm_info);

        printf("\rCurrent Time: %s", buffer);
        fflush(stdout);
        sleep(1);
    }
    return 0;
}
